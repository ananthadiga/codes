
 #include<stdio.h>
#include<math.h>
struct complex
{
         float realpart;
         float imaginary ;
};




float  findRoots(int a, int b, int c,struct complex  *y)

{
         int  d;
         d = ((b*b)- (4*a*c));
         printf("d=%d ",d);
        if (d>0)
                {
                        y->realpart= (-b+sqrt(d)/(2*a));
                        y->imaginary = (-b-sqrt(d)/(2*a));
                        return(0);

                }


        else  if(d==0)
                {
                         y->realpart =  -b/(2*a);
                         y->imaginary=y->realpart;
                        return(0);


                }
        else

                {
                        y->realpart= sqrt(-d)/(2*a);
                        y->imaginary= -b*(2*a);
                        return(0);


                }


}


int  main()
{
         int  a,b,c, i=0;
         struct complex  s;
         printf(" enter the values of a,b,c ");
         scanf("%d%d%d", &a,&b,&c);
         findRoots(a,b,c,&s);
         printf("r1 =%f\tr2=%f\t",s.realpart,s.imaginary);

}
























