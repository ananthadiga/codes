
         
#include<stdio.h>
#include<math.h>
struct comple
{
         int realpart;
         float imaginary ;
}s;




float findRoots(int a, int b, int c,float *r1,float *r2)

{
         int d;
         d = ((b*b)- (4*a*c));
         printf("d=%d ",d);
        if (d>0)
                {
                        *r1= (-b+sqrt(d)/(2*a));
                        *r2 = (-b-sqrt(d)/(2*a));
                        return(0);

                }


        else  if(d==0)
                {
                         *r1=  -b/(2*a);
                         *r2=*r1;
                        return(0);


                }
        else

                {
                        *r1 =s.realpart= sqrt(-d)/(2*a);
                        *r2=s.imaginary= -b*(2*a);
                        return(0);


                }


}


int  main()
{
         int  a,b,c, i=0;
         float r1=0.0,r2=0.0;
         printf(" enter the values of a,b,c ");
         scanf("%d%d%d", &a,&b,&c);
         findRoots(a,b,c,&r1,&r2);
         printf("r1 =%f\tr2=%f\t",r1,r2);

}











